<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jeek.calendar.activity.DetailEventActivity">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/nbAddGoal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:id="@+id/llCancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/ic_chevron_left" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSaveGoal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/tvSaveGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  SAVE  "
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:background="@drawable/purple_schedule_left_block"
                    android:backgroundTint="#76DAFE"
                    android:textStyle="italic|bold"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>


        <ScrollView
            android:id="@+id/svEventDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nbAddGoal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/EventTitleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorPrimaryDark">
                    <EditText
                        android:id="@+id/etScheduleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_gravity="center"
                        android:hint="Event Title"
                        android:textColor="@color/colorICWhite"
                        android:textColorHint="@color/colorICGrey"
                        android:textSize="24sp"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/AccountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/iCalendarImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCalendarNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="@dimen/margin_start_detail_30dp"
                        android:text="name"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/colorICWhite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iCalendarImage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCalendarOwnerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="70dp"
                        android:text="someemail@gmail.com"
                        android:textColor="@color/colorICGrey"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCalendarNameTextView" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/llScheduleTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/clFirstDate"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="40dp">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/clPickDateFrom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/llPickTimeFrom">
                            <ImageView
                                android:id="@+id/ivDate"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_clock_with_white_face"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tvScheduleTime3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_start_detail_30dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginBottom="13dp"
                                android:text="Saturday, August 3"
                                android:textSize="@dimen/text_size_14sp"
                                android:textColor="@color/colorICWhite"
                                app:layout_constraintStart_toEndOf="@+id/ivDate"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/llPickTimeFrom"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:id="@+id/tvScheduleTime4"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:text="00:00"
                                android:textAlignment="center"
                                android:textSize="@dimen/text_size_14sp"
                                android:textColor="@color/colorICWhite"/>
                        </LinearLayout>
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/clSecondDate"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/clFirstDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tvEndTime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="13dp"
                            android:text="Saturday, August 3"
                            android:textSize="@dimen/text_size_14sp"
                            android:textColor="@color/colorICWhite"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/llPickTimeTo"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:id="@+id/tvScheduleTime2"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:text="00:00"
                                android:textSize="@dimen/text_size_14sp"
                                android:textColor="@color/colorICWhite" />
                        </LinearLayout>
                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/DescriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/iNoteImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_icons8_edit_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etScheduleDesc"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="@dimen/margin_start_detail_30dp"
                        android:layout_marginTop="8dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:text=""
                        android:hint="Add note"
                        android:textSize="14sp"
                        android:textColor="@color/colorICWhite"
                        android:textColorHint="@color/colorICGrey"

                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iNoteImage"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/clPickColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/iColorImage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_pickcolor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvScheduleColor"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:text="Default"
                        android:textColor="@color/colorICWhite"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iColorImage"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </ScrollView>


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>