<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context="com.jeek.calendar.activity.DetailGoalActivity">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/llDetailGoalToolBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/llCancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="13dp"
                android:src="@drawable/ic_chevron_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/llGoMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="13dp"
                android:src="@drawable/ic_menu_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>


        <ImageView
            android:id="@+id/ivImageDetailGoal"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAimsEventsGoalDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llDetailGoalToolBar"/>

        <include
            android:id="@+id/BackGroundWhenChoice"
            layout="@layout/halph_transp_background"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/FabMain_Sub"
            android:layout_width="@dimen/fab_main"
            android:layout_height="@dimen/fab_main"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:background="@drawable/shape_round_fab_main"
            android:src="@drawable/ic_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/FabSub"
            android:layout_width="@dimen/fab_sub"
            android:layout_height="@dimen/fab_sub"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="20dp"

            android:background="@drawable/shape_round_fab_main"
            android:src="@mipmap/ic_menu_go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/FabMain"
            android:layout_width="@dimen/fab_main"
            android:layout_height="@dimen/fab_main"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:background="@drawable/shape_round_fab_main"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <com.jeek.calendar.activity.DoubleDrawerView
        android:id="@+id/double_drawer_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:theme="@style/NavigationView">

        <android.support.design.widget.NavigationView
            android:id="@+id/main_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_main" />

        <fragment
            android:id="@+id/membersFragment"
            android:name="com.jeek.calendar.fragment.MembersFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/activityFragment"
            android:name="com.jeek.calendar.fragment.ActivityFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/addonsFragment"
            android:name="com.jeek.calendar.fragment.AddonsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/archivedTasksFragment"
            android:name="com.jeek.calendar.fragment.ArchivedTasksFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/archivedListsFragment"
            android:name="com.jeek.calendar.fragment.ArchivedListsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/goalSettingsFragment"
            android:name="com.jeek.calendar.fragment.GoalSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.jeek.calendar.activity.DoubleDrawerView>

</android.support.v4.widget.DrawerLayout>
