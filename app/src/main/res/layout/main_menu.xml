<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:layout_marginEnd="@dimen/action_bar_height"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:forceHasOverlappingRendering="true"
    android:tag="menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:paddingStart="@dimen/space_20dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="25">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="21">
            <TextView
                android:id="@+id/tvMenuTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorWrite"
                android:textSize="@dimen/text_size_20sp"/>

            <TextView

                android:id="@+id/tvMenuTitleAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:text="@string/account_name"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_v7logo"/>
        </LinearLayout>
    </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llMenuSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_item_height"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_width"
                        android:layout_marginStart="@dimen/space_20dp"
                        android:tint="@color/colorMagenta"
                        android:src="@drawable/ic_calendar"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10dp"
                        android:layout_weight="1"
                        android:text="@string/menu_schedule"
                        android:textColor="@color/colorMagenta"
                        android:textSize="@dimen/text_size_18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMenuGoMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_item_second_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_width"
                            android:layout_marginStart="@dimen/space_20dp"
                            android:src="@drawable/ic_dollar"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10dp"
                            android:layout_weight="1"
                            android:text="@string/menu_money"
                            android:textColor="@color/colorLime"
                            android:textSize="@dimen/text_size_18sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMenuGoGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_item_second_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_width"
                            android:layout_marginStart="@dimen/space_20dp"
                            android:tint="@color/colorSoftYellow"
                            android:src="@drawable/ic_flag"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10dp"
                            android:layout_weight="1"
                            android:text="@string/menu_goal_tracker"
                            android:textColor="@color/colorSoftYellow"
                            android:textSize="@dimen/text_size_18sp"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMenuGoSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_item_second_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_width"
                            android:layout_marginStart="@dimen/space_20dp"
                            android:tint="@color/colorICGrey"
                            android:src="@drawable/ic_settings"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10dp"
                            android:layout_weight="1"
                            android:text="@string/menu_settings"
                            android:textColor="@color/colorICGrey"
                            android:textSize="@dimen/text_size_18sp"/>

                    </LinearLayout>

                </LinearLayout>
