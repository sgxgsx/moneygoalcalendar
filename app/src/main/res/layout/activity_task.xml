<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.jeek.calendar.activity.TaskActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Toolbar
            android:id="@+id/tbTaskActivity"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/llCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:src="@drawable/ic_chevron_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_margin="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@android:color/transparent"
        android:hint="Title"
        android:maxLength="20"
        android:maxLines="1"
        android:textColor="@color/colorTextWhite"
        android:textColorHint="#737078"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbTaskActivity" />

    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Description"
        android:textColor="@color/colorTextWhite"
        android:textColorHighlight="@color/colorICGrey"
        android:textColorHint="#737078"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="50dp">
        <ImageView
            android:id="@+id/icLabel"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:background="@drawable/ic_color_palette"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/colorICWhite"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/icLabel"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/tvLabelsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labels..."
                android:textColor="@color/colorICWhite"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="50dp">
        <ImageView
            android:id="@+id/icMember"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:background="@drawable/ic_group"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorICWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:id="@+id/tvMembersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Members..."
                android:visibility="visible"
                android:textColor="@color/colorICWhite"
                android:layout_gravity="center_vertical"/>

            <View
                android:id="@+id/vMember"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="gone"
                android:background="@drawable/circle"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/icDeadline"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:background="@drawable/ic_clock"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorICWhite" />


        <TextView
            android:id="@+id/tvDeadlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="Deadline..."
            android:visibility="visible"
            android:textColor="@color/colorICWhite"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/icCheckList"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:background="@drawable/ic_done"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorICWhite" />


        <TextView
            android:id="@+id/tvCheckListText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="CheckList..."
            android:visibility="visible"
            android:textColor="@color/colorICWhite"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/icActivity"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:background="@drawable/ic_note"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorICWhite" />


        <TextView
            android:id="@+id/tvActivityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="Actvity..."
            android:visibility="visible"
            android:textColor="@color/colorICWhite"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/icComment"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:background="@drawable/ic_chat"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorICWhite" />


        <EditText
            android:id="@+id/evCommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:hint="Add a comment"
            android:background="@color/colorTranslate"
            android:textColorHint="@color/colorGrey"
            android:visibility="visible"
            android:textColor="@color/colorICWhite"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
